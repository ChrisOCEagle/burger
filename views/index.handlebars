<h1 class="title">Eat-Da-Burger!!!</h1>

<h3 class="title form-title">Add a Burger!</h3>
<form class="create-form">
    <input name="burger" type="text" id="burger" placeholder="Cheeseburger"/>
    <button type="submit">Add Burger</button>
</form>

<h2 class="title section-title">Burger Status</h2>
<section class="lists" id="burger-lists">
    <div class="column right">
        <h3 class="title list-title">Available for Consumption</h3>
        <ul class="list">
            {{#each burgers}}
                {{#unless devoured}}
                    {{> burgers/burger-block devoured=true}}
                {{/unless}}
            {{/each}}
        </ul>
    </div>
    
    <div class="column left">
        <h3 class="title list-title">Devoured</h3>
        <ul class="list">
            {{#each burgers}}
                {{#if devoured}}
                    {{> burgers/burger-block devoured=false}}
                {{/if}}
            {{/each}}
        </ul>
    </div>
</section>
